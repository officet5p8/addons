ARG BUILD_FROM=ghcr.io/hassio-addons/base:12.2.3
FROM $BUILD_FROM

# Set timezone
ENV TZ="Europe/Rome"

# Install Tesseract
RUN apk add --no-cache tesseract-ocr tesseract-ocr-data-eng

# Copy files
COPY run.sh /usr/bin/run.sh
RUN chmod +x /usr/bin/run.sh

# Entrypoint
CMD [ "/usr/bin/run.sh" ]
